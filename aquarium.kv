#:kivy 2.0

#:include settings.kv
#:include graph.kv

MainWidget: 

<MainWidget>:

    #top
    Label:
        text: "Aquarium"
        bold: True
        pos: 0, 280
    Label:
        id: username
        text: "N/A"
        bold: True
        pos: -400, 280
    Label:
        id: time
        text: '00:00:00'
        font_name: 'fonts/dd.otf'
        font_size: 20
        pos: 450,280


    Label:
        text: 'Aquarium Temperature:'
        bold: True
        pos: 10, 200
        text_size:self.size
        halign: "left"
        valign: "middle"
    Label:
        id: temp_int
        text: 'N/A°C'
        bold: True
        pos: 180, 200
        text_size:self.size
        halign: "left"
        valign: "middle"
    Label:
        id: date_int
        text: 'N/A'
        bold: True
        pos: -150, 200


    Label:
        text: 'External Temperature:'
        bold: True
        pos: 10, 170
        text_size:self.size
        halign: "left"
        valign: "middle"
    Label:
        text: 'External Humidity:'
        bold: True
        pos: 10, 140
        text_size:self.size
        halign: "left"
        valign: "middle"
    Label:
        id: temp_ext
        text: 'N/A°C'
        bold: True
        pos: 180, 170
        text_size:self.size
        halign: "left"
        valign: "middle"
    Label:
        id: hum_ext
        text: 'N/A%'
        bold: True
        pos: 180, 140
        text_size:self.size
        halign: "left"
        valign: "middle"
    Label:
        id: date_ext
        text: 'N/A'
        bold: True
        pos: -150, 155


    


    Button:
        text: 'Settings'
        on_press:
            root.manager.transition.direction = 'left'
            root.manager.current = 'settings'
        size_hint: None, None
        size: 100, 50
        pos: 804, 10
        
    Button:    
        text: 'Graph'
        on_press:
            root.manager.transition.direction = 'left'
            root.manager.current = 'graphs'
        size_hint: None, None
        size: 100, 50
        pos: 914, 10
        
