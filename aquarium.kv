MainWidget:
    BoxLayout:
        orientation: "vertical"
        BoxLayout:
            size_hint: 1, None
            height: 30

            Label:
                text: "Aquarium"
                bold: True
        BoxLayout:
            orientation: "vertical"
            BoxLayout:
                orientation: "horizontal"
                BoxLayout:
                    Button:
                        text: "first box"
                        bold: True
                BoxLayout:
                    Label:
                        text: "second box"
                        bold: True
                        canvas.before:
                            Color:
                                rgb: 0,1,0
                            Rectangle:
                                pos: self.pos
                                size: self.size
            BoxLayout:
                orientation: "horizontal"
                BoxLayout:
                    Label:
                        text: "third box"
                        bold: True
                        canvas.before:
                            Color:
                                rgb: 1,0,1
                            Rectangle:
                                pos: self.pos
                                size: self.size
                BoxLayout:
                    Label:
                        text: "forth box"
                        bold: True
                        canvas.before:
                            Color:
                                rgb: 0,1,1
                            Rectangle:
                                pos: self.pos
                                size: self.size