#:kivy 2.0
              
<GraphScreen>:
    canvas.before:
        Color:
            rgba: 1, 1, 1, 1
        Rectangle:
            pos: self.pos
            size: self.size
    BoxLayout:
        id: int_temp
        size_hint: None, None
        size: 1004, 190
        pos: 10, 395
    BoxLayout:
        id: ext_temp
        size_hint: None, None
        size: 1004, 190
        pos: 10, 205
    BoxLayout:
        id: ext_hum
        size_hint: None, None
        size: 600, 190
        pos: 60, 15

    BoxLayout:
        size_hint: None, None
        size: 100, 50
        pos: 914, 10
        Button:
            text: 'Back to menu'
            
            on_press:
                root.manager.transition.direction = 'right'
                root.manager.current = 'menu'

    BoxLayout:
        size_hint: None, None
        size: 200, 50
        pos: 704, 10
        __safe_id: [drop_content.__self__]
        Button:
            id: btn_refresh
            text: "Refresh"
            on_press: root.update_graph()
            
        Button:
            id: btn
            text: "Select Period"
            on_release: drop_content.open(self)
            on_parent: drop_content.dismiss()
        
        DropDown:
            id: drop_content
            on_select: btn.text = '{}'.format(args[1])

            Button:
                id: btn1
                text: ' 2 Hours'
                size_hint_y: None
                height: 35
                on_release: drop_content.select('2 Hours')

            Label:
                text:"Drop2"
                size_hint_y: None
                height: 44

            Button:
                id: btn3
                text: '8 Hours'
                size_hint_y: None
                height: 35
                on_release: drop_content.select('8 Hours')
